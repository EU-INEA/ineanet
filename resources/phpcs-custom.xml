<?xml version="1.0"?>

<ruleset name="INEA">
    <description>Custom ruleset for subsite usage.</description>

    <!-- Views handlers not strictly follow Drupal class name conventions. -->
    <rule ref="Drupal.Semantics.FunctionT.WhiteSpace">
        <exclude-pattern>**/inea_h2020_ct.features.field_instance.inc</exclude-pattern>
	<exclude-pattern>**/inea_cef_ct.features.field_instance.inc</exclude-pattern>
    </rule>

    <!-- Temporary fix to get green report -->
    <rule ref="QualityAssurance.Generic.EmptySettings.Strongarm">
        <exclude-pattern>**/inea_cef_ct.strongarm.inc</exclude-pattern>
    </rule>

    <!-- Exclude inea_migration, code will be removed in next release. -->
    <exclude-pattern>**/inea_migration</exclude-pattern>

    <!-- Exclude EC-Europa theme assets folder. -->
    <exclude-pattern>**/lib/themes/ineaeur/assets</exclude-pattern>
</ruleset>

